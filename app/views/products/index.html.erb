<div class="row">
  <div class="col-10">
<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td class="btn btn-success"><%= link_to 'Ver', product %></td>
        <td class="btn btn-success"><%= link_to 'Editar', edit_product_path(product) %></td>
        <td class="btn btn-success"><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo producto', new_product_path %>
</div>
</div>
