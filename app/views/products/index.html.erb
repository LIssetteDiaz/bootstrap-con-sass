<div class="row text-center">
  <div class="col-10">
    <img src="<%= asset_path 'img8.jpeg' %>" class="card-img-top" alt="img3" width="200px" height="150px">
    <img src="<%= asset_path 'img7.jpeg' %>" class="card-img-top" alt="img3" width="200px" height="150px">
    <img src="<%= asset_path 'img6.jpeg' %>" class="card-img-top" alt="img3" width="200px" height="150px">
    <img src="<%= asset_path 'img5.jpeg' %>" class="card-img-top" alt="img3" width="200px" height="150px">
